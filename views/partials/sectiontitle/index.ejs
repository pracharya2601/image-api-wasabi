<div 
    class="
        flex w-full flex-col mt-4 py-16 
        <% if (typeof align !== 'undefined' && align === 'left' ) { %>
            'left'
        <% } else { %>
            ' items-center justify-center text-center '
        <% } %>
    "
>
    <div class="text-sm font-bold tracking-wider text-indigo-600 uppercase">
        <%= pretitle %>
    </div>
    <h2 class="max-w-2xl mt-3 text-3xl font-bold leading-snug tracking-tight lg:leading-tight lg:text-4xl text-white">
        <%= title %>
    </h2>
    <% if (typeof detail !== 'undefined' ) { %>
        <div class="max-w-2xl py-4 text-lg leading-normal lg:text-xl xl:text-xl text-gray-300">
            <%= detail %>
        </div>
    <% } %>
</div>